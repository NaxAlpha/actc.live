{
  "name": "actc-live",
  "version": "0.1.0",
  "private": true,
  "description": "Cross-platform YouTube loop streamer desktop app",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w @actc/desktop",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test:unit --workspaces --if-present",
    "test:integration": "npm run test:integration --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "package:desktop": "npm run package -w @actc/desktop",
    "e2e": "npm run e2e -w @actc/desktop"
  },
  "engines": {
    "node": ">=20.12.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2"
  }
}
